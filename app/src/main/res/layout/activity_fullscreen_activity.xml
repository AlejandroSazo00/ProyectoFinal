<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fullscreen_background"
    android:gravity="center"
    android:padding="32dp">

    <!-- Botón cerrar en la esquina -->
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:background="@drawable/close_button_background"
        android:src="@drawable/ic_close"
        android:contentDescription="Cerrar"
        android:layout_marginBottom="16dp" />

    <!-- Texto de instrucción -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Es hora de realizar esta actividad!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <!-- Pictograma grande -->
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/activityImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            android:background="@android:color/white"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

    </androidx.cardview.widget.CardView>

    <!-- Nombre de la actividad -->
    <TextView
        android:id="@+id/activityNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la Actividad"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginBottom="48dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <!-- Botón Posponer -->
        <Button
            android:id="@+id/postponeButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:text="⏰ Posponer\n5 minutos"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_postpone"
            android:textColor="@android:color/white" />

        <!-- Botón Completar -->
        <Button
            android:id="@+id/completeButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="✅ ¡Listo!\nCompletado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_complete"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Texto de ayuda -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toca la imagen para escuchar de nuevo"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:alpha="0.8" />

</LinearLayout>
