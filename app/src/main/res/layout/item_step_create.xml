<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Imagen del pictograma -->
        <ImageView
            android:id="@+id/stepImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/image_background"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:contentDescription="Imagen del paso" />

        <!-- Contenido del paso -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stepNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paso 1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/stepNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del paso"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/stepDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del paso"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/editStepButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/button_round"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar paso"
                android:backgroundTint="@color/info" />

            <ImageButton
                android:id="@+id/deleteStepButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_round"
                android:src="@drawable/ic_delete"
                android:contentDescription="Eliminar paso"
                android:backgroundTint="@color/error" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
